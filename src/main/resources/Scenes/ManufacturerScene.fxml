<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1000.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ManufacturerController">
   <children>
      <VBox layoutX="150.0" layoutY="150.0" prefHeight="200.0" prefWidth="800.0">
         <children>
            <TableView fx:id="manufacturerTableView" prefHeight="200.0" prefWidth="800.0">
              <columns>
                <TableColumn fx:id="manufacturerNameCol" prefWidth="75.0" text="Manufacturer" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="manufacturerNameInput" prefWidth="225.0" promptText="Name of Manufacturer" />
                  <Button fx:id="addManufacturer" mnemonicParsing="false" prefWidth="80.0" text="Add" />
               </children>
               <padding>
                  <Insets left="250.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Dashboard" />
         </children>
      </VBox>
   </children>
</AnchorPane>
